apiVersion: batch/v1beta1
kind: CronJob
metadata:
  name: containername
spec:
  schedule: "0 * * * *"
  concurrencyPolicy: "Forbid"
  failedJobsHistoryLimit: 10
  jobTemplate:
    spec:
      backoffLimit: 2
      template:
        spec:
          containers:
            - name: containername
              image: imagename
              command: ["python3"]
              args: ["route", "arg"]
          restartPolicy: Never
